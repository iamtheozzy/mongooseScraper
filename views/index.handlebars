{{!-- Navbar for Homepage --}}

<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <a class="navbar-brand" href="/">New York Times Scraper</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav">
      <li class="nav-item active">
        <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/saved">Saved Articles</a>
      </li>
      <li class="nav-item">
        <form class="form-inline" action="/scrape" method="GET" >
            <button class="btn btn-outline-success" type="submit" id="refresh-articles">Scrape New Articles</button>
        </form>
      </li>
    </ul>
  </div>
</nav>

{{!-- Jumbotron Fluid with image --}}
<div class="jumbotron jumbotron-fluid overlay" id="main-image">
  <div class="container text-center ">
    <h1 class="display-4">New York Times Scraper</h1>
    <p class="lead">Srape all the news you want!!!!</p>
  </div>
</div>


<div class="card" id="{{this.id}}">
  <h5 class="card-header"><a href="{{this.link}}" target="_blank">{{this.title}}</a></h5>
  <div class="card-body">
    <h5 class="card-title">Special title treatment</h5>
    <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
    <a href="#" class="btn btn-primary">Go somewhere</a>
  </div>
</div>


{{#each articles}}
<div class="story-body" id={{this._id}}>
    <h2>
        <a href="{{this.link}}" target="_blank">{{this.title}}</a>
        <form action="/save/{{this._id}}" method="POST">
            <button type="submit" class="status" value="{{this.status}}">{{this.status}}</button>
            {{#unless this.note}}
            <button type="button" class="addnote-button" value="{{this._id}}">Add A Note</button>
            {{/unless}} 
            {{#if this.note}}
            <button type="button" class="addnote-button" value="{{this._id}}">Edit Note</button>
            {{/if}}
        </form>
    </h2>
    <summary>{{this.summary}}</summary>
    <img class="media" src="{{this.img}}">
</div>
{{/each}}


