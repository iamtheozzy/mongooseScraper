{{!-- Saved Artcile Card --}}
{{#each saved}}
<div class="card custom-card" id="{{this.id}}">
  <h2 class="card-header"><a href="{{this.link}}" target="_blank">{{this.title}}</a></h2>
  <div class="card-body">
      <img src="{{this.img}}" alt="Article Image" class="article-img float-left">
      <p class="card-text">{{this.summary}}</p>
      <form action="/save/{{this._id}}" method="POST">
        <button type="submit" class="status btn btn-primary" value="{{this.status}}">{{this.status}}</button>
        {{#unless this.note}}
        <button type="button" class="addnote-button btn btn-primary" value="{{this._id}}">Add A Note</button>
        {{/unless}} 
        {{#if this.note}}
        <button type="button" class="addnote-button btn btn-primary" value="{{this._id}}">Edit Note</button>
        {{/if}}
      </form>
  </div>
</div>
{{/each}}
